@model Product

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product - Create</h4>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-controller="Product" asp-action="MakeDiscount" asp-route-id="@Model.Id" method="post" class="forms-sample">
                        <div class="form-group">
                            <label>Discount Value</label>
                            <input name="discountValue" class="form-control" placeholder="Add Discount">
                        </div>
                        <div class="my-2">
                            <button type="submit" class="btn btn-primary mr-2 text-white">Submit</button>
                            <button asp-controller="product" asp-action="index" class="btn btn-secondary text-white">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>