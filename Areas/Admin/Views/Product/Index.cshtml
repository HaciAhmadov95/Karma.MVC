@model List<Product>

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product - Table</h4>
                    <div class="table-responsive">
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-secondary text-white" asp-controller="dashboard" asp-action="index">Go Back</a>
                            <a class="btn btn-success text-white" asp-controller="product" asp-action="create">Create</a>
                        </div>
                        @if(@Model.Count == 0)
                        {
                            <div class="d-flex justify-content-center mt-5">
                                <h5>Please add product...</h5>
                            </div>
                        }
                        else
                        {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Price
                                    </th>
                                    <th>
                                        Setting
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td class="py-1">
                                            @foreach (var image in product.Images)
                                            {
                                                if (image.IsMain == true)
                                                {
                                                    <img src="~/assets/uploads/images/@image.Url" alt="image" />
                                                }
                                            }
                                        </td>
                                        <td>
                                            @product.Title
                                        </td>
                                        <td>
                                                @if(product.DiscountValue == 0)
                                                {
                                                    <span>$ @product.Price</span>
                                                }else
                                                {
                                                    <span>$@Math.Round((decimal)(product.Price - (product.Price * product.DiscountValue / 100)),2)</span>
                                                }
                                            </td>
                                        <td>
                                            <div class="d-flex">
                                                <a class="btn btn-primary text-white mx-1" asp-controller="product" asp-action="makediscount" asp-route-id="@product.Id">Discount</a>
                                                <a class="btn btn-warning text-white mx-1" asp-controller="product" asp-action="update" asp-route-id="@product.Id">Update</a>
                                                <a class="btn btn-danger text-white mx-1" asp-controller="product" asp-action="delete" asp-route-id="@product.Id">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>