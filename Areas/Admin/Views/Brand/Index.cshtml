@model List<Brand>

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Brand - Table</h4>
                    <div class="table-responsive">
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-secondary text-white" asp-controller="dashboard" asp-action="index">Go Back</a>
                            <a class="btn btn-success text-white" asp-controller="brand" asp-action="create">Create</a>
                        </div>
                        @if (@Model.Count == 0)
                        {
                            <div class="d-flex justify-content-center mt-5">
                                <h5>Please add brand...</h5>
                            </div>
                        }
                        else
                        {
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Brand Name
                                        </th>
                                        <th>
                                            Setting
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>


                                    @foreach (var brand in Model)
                                    {
                                        <tr>
                                            <td>
                                                @brand.Name
                                            </td>
                                            <td>
                                                <div class="d-flex">
                                                    <a class="btn btn-warning text-white mx-1" asp-controller="brand" asp-action="update" asp-route-id="@brand.Id">Update</a>
                                                    <a class="btn btn-danger text-white mx-1" asp-controller="brand" asp-action="delete" asp-route-id="@brand.Id">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>