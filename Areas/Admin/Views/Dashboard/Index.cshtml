@model DashboardVM

<div class="container content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-title mb-0">Comments</p>
                    <div class="table-responsive">
                        @if(Model.Comments.Count == 0)
                        {
                            <div class="d-flex justify-content-center mt-5">
                                <h5>No comments found...</h5>
                            </div>
                        }else{
                        <table class="table table-striped table-borderless">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Username</th>
                                    <th>Comment</th>
                                    <th>Setting</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var comment in Model.Comments)
                                {
                                    <tr>
                                        @if (comment.AppUser.Image is not null)
                                        {
                                            <td><img src="~/assets/uploads/images/@comment.AppUser.Image.Url" /></td>
                                        }
                                        else
                                        {
                                            <td><img style="width: 70px; height: 70px; border-radius: 50%; object-fit: cover" src="~/areas/admin/images/admin-deafult-pp.jpg" /></td>
                                        }
                                        <td class="font-weight-bold">@comment.AppUser.UserName</td>
                                        <td>@comment.Content</td>
                                        <td>
                                            <a asp-area="admin" asp-controller="dashboard" asp-action="deletecomment" asp-route-id="@comment.Id" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        }
                    </div>
                </div>
            </div>
        </div>
