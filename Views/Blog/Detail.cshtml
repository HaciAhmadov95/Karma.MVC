@model BlogDetailVM

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Blog Page</h1>
                <nav class="d-flex align-items-center">
                    <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="category.html">Blog</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Blog Area =================-->
<section class="blog_area single-post-area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post row">
                    <div class="col-lg-12">
                        <div class="feature-img">
                            <img class="img-fluid" src="~/assets/uploads/images/@Model.Blog.Images.Where(n => n.IsMain == true).FirstOrDefault().Url" alt="">
                        </div>
                    </div>
                    <div class="col-lg-3  col-md-3">
                        <div class="blog_info text-right">
                            <div class="post_tag">
                                <a class="active" href="#">@Model.Blog.BlogCategory.Name</a>
                            </div>
                            <ul class="blog_meta list">
                                <li><a href="#">@Model.Blog.AppUser.Firstname @Model.Blog.AppUser.Lastname<i class="lnr lnr-user"></i></a></li>
                                <li><a href="#">@Model.Blog.CreateDate.ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)<i class="lnr lnr-calendar-full"></i></a></li>
                                <li><a href="#">@Model.Blog.Comments.Count Comments<i class="lnr lnr-bubble"></i></a></li>
                            </ul>
                            <ul class="social-links">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-github"></i></a></li>
                                <li><a href="#"><i class="fa fa-behance"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 blog_details">
                        <h2>Astronomy Binoculars A Great Alternative</h2>
                        <p class="excert">
                            @Model.Blog.Content
                        </p>
                    </div>
                    <div class="col-lg-12">
                        <div class="row">
                            @foreach (var image in Model.Blog.Images)
                            {
                                if(image.IsMain == false)
                                {
                                    <div class="col-6">
                                        <img class="img-fluid" src="~/assets/uploads/images/@image.Url" alt="">
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="comments-area">
                    <h4>@Model.Blog.Comments.Where(n => !n.IsDeleted).Count() Comments</h4>
                    @foreach(Comment comment in Model.Blog.Comments)
                    {
                        @if(comment.IsDeleted == false)
                        {
                        <div class="comment-list">
                            <div class="single-comment justify-content-between d-flex">
                                <div class="user justify-content-between d-flex">
                                    <div class="thumb">
                                        @if(comment.AppUser.Image != null)
                                        {
                                            <img style="width:70px; border-radius: 50%" "src="~/assets/uploads/images/@comment.AppUser.Image.Url" alt="">

                                        }else
                                        {

                                            <img style="width:70px; border-radius: 50%" src="~/areas/admin//images/admin-deafult-pp.jpg" alt="">
                                        }
                                    </div>
                                    <div class="desc">
                                        <h5><a href="#">@comment.AppUser.Firstname @comment.AppUser.Lastname</a></h5>
                                        <p class="date">@comment.CreateDate.ToString("MMMM dd, yyyy, HH:MM ", System.Globalization.CultureInfo.InvariantCulture)</p>
                                        <p class="comment">
                                            @comment.Content
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    }
                </div>
                <div class="comment-form">
                    <h4>Leave a Comment</h4>
                    <form asp-controller="Blog" asp-action="AddComment" asp-route-id="@Model.Blog.Id">
                        <div class="form-group">
                            <textarea name="content" class="form-control mb-10" rows="5" name="message" placeholder="Messege"
                                      onfocus="this.placeholder = ''" onblur="this.placeholder = 'Messege'" required=""></textarea>
                        </div>
                        <button type="submit" class="primary-btn submit_btn">Post Comment</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Popular Posts</h3>
                        @foreach (Blog blog in Model.PopularBlogs)
                        {
                            <div class="media post_item">
                                <div class="col-4 p-0">
                                    <img class="w-100" src="~/assets/uploads/images/@blog.Images.Where(n => n.IsMain == true).FirstOrDefault().Url" alt="post">
                                </div>
                                <div class="col-8 media-body">
                                    <a href="blog-details.html">
                                        <h3>@blog.Title</h3>
                                    </a>
                                    <p>02 Hours ago</p>
                                </div>
                            </div>
                        }
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget post_category_widget">
                        <h4 class="widget_title">Post Categories</h4>
                        <ul class="list cat-list">
                            @foreach (BlogCategory blogCategory in Model.BlogCategories)
                            {
                                <li>
                                    <a href="#" class="d-flex justify-content-between">
                                        <p>@blogCategory.Name</p>
                                        <p>@blogCategory.Blogs.Count</p>
                                    </a>
                                </li>
                            }
                        </ul>
                        <div class="br"></div>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================Blog Area =================-->
