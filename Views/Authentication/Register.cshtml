		<div class="col-lg-12">
			<div class="login_form_inner">
				<h3>Register</h3>
				<div asp-validation-summary="All" class="text-danger"></div>
				<form asp-controller ="Authentication" asp-action="Register" class="row login_form" method="post" id="contactForm">
					<div class="col-md-12 form-group">
						<input asp-for="Firstname" type="text" class="form-control" id="name" placeholder="Firstname" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Firstname'">
					</div>
					<div class="col-md-12 form-group">
						<input asp-for="Lastname" type="text" class="form-control" id="name" placeholder="Lastname" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Lastname'">
					</div>
					<div class="col-md-12 form-group">
						<input asp-for="Username" type="text" class="form-control" id="name" placeholder="Username" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'">
					</div>
					<div class="col-md-12 form-group">
						<input asp-for="Email" type="email" class="form-control" id="name" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'">
					</div>
					<div class="col-md-12 form-group">
						<input asp-for="Password" type="password" class="form-control" id="name" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
					</div>
					<div class="col-md-12 form-group">
						<input asp-for="ConfirmPassword" type="password" class="form-control" id="name" placeholder="Confirm Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirm Password'">
					</div>
					<div class="col-md-12 form-group">
						<!-- <div class="creat_account">
							<input type="checkbox" id="f-option2" name="selector">
							<label for="f-option2">Keep me logged in</label>
						</div> -->
					</div>
					<div class="col-md-12 form-group">
						<button type="submit" value="submit" class="primary-btn">Register</button>
						<br>
						<br>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
