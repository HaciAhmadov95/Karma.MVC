<header class="header_area sticky-header">
	<div class="main_menu">
		<nav class="navbar navbar-expand-lg navbar-light main_box">
			<div class="container">
				
				<a class="navbar-brand logo_h" asp-controller="Home" asp-action="Index"><img src="~/assets/img/logo.png" alt=""></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
						aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			
				<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
					<ul class="nav navbar-nav menu_nav ml-auto">
						<li class="nav-item active"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Shop" asp-action="Index">Shop</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Blog" asp-action="Index">Blog</a>
						</li>
						<li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a></li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item"><a asp-controller="Account" asp-action="Index"><span class="ti-user"></span></a></li>
							<li class="nav-item"><a asp-controller="Authentication" asp-action="Logout"><span>Logout</span></a></li>
						}
						else
						{
							<li class="nav-item"><a asp-controller="Authentication" asp-action="Login"><span class="ti-user"></span></a></li>
						}
						<li class="nav-item"><a asp-controller="Cart" asp-action="Index"><span class="ti-bag"></span></a></li>
						<li class="nav-item"><a asp-controller="Wishlist" asp-action="Index"><span class="lnr lnr-heart"></span></a></li>
						<li class="nav-item">
							<button class="search"><span class="lnr lnr-magnifier" id="search"></span></button>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</div>
	<div class="search_input" id="search_input_box">
		<div class="container">
			<form asp-controller="Shop" asp-action="Index" class="d-flex justify-content-between">
				<input name="input" class="form-control" id="search_input" placeholder="Search Here">
				<button type="submit" class="btn"></button>
				<span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
			</form>
		</div>
	</div>
</header>